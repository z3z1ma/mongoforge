{
  "mcpServers": {
    "mcp-agent-mail": {
      "command": "uv",
      "args": [
        "tool",
        "run",
        "--from",
        "mcp-agent-mail @ git+https://github.com/alexx-ftw/mcp_agent_mail@feat/add-serve-stdio",
        "python",
        "-m",
        "mcp_agent_mail.cli",
        "--",
        "serve-stdio"
      ],
      "env": {
        "DATABASE_URL": "sqlite+aiosqlite:///./.claude/mcp_mail.db"
      }
    },
    "serena": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "claude-code",
        "--project-from-cwd"
      ]
    }
  }
}
